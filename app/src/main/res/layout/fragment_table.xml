<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Table">



<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/table">

    <TextView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="LA  LIGA  TABLE"
        android:textColor="#3A3333"
        android:textSize="40dp"
        android:textStyle="bold"
        />

    <!-- Table header row -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/black"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:textColor="#E6E3C8"
            android:id="@+id/tv_table_header_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pos"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:textSize="17dp"
            android:textColor="#E6E3C8"
            android:id="@+id/tv_table_header_team"
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Team"
            android:textStyle="bold" />

        <TextView
            android:textSize="17dp"
            android:textColor="#E6E3C8"
            android:id="@+id/tv_table_header_wins"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="W"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:textSize="17dp"
            android:textColor="#E6E3C8"
            android:id="@+id/tv_table_header_draws"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:textSize="17dp"
            android:textColor="#E6E3C8"
            android:id="@+id/tv_table_header_losses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="L"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:textSize="17dp"
            android:textColor="#E6E3C8"
            android:id="@+id/tv_table_header_gf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GF"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:textSize="17dp"
            android:textColor="#E6E3C8"
            android:id="@+id/tv_table_header_ga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GA"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:textSize="17dp"
            android:textColor="#E6E3C8"
            android:id="@+id/tv_table_header_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pts"
            android:textAlignment="center"
            android:textStyle="bold" />
    </TableRow>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/recyclerView"

        />


</TableLayout>


<ProgressBar
    android:id="@+id/progress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:indeterminate="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>cal">

    <TextView
        android:id="@+id/tableTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="16dp" />

</LinearLayout>
